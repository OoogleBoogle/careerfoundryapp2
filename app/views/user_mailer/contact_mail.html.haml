%table#bodyTable{:border => "0", :cellpadding => "0", :cellspacing => "0", :height => "100%", :width => "100%"}
  %tr
    %td{:align => "center", :valign => "top"}
      %table#emailContainer{:border => "0", :cellpadding => "20", :cellspacing => "0", :width => "600"}
        %tr
          %td{:align => "center", :valign => "top"}
            %table#emailHeader{:border => "0", :cellpadding => "20", :cellspacing => "0", :width => "100%"}
              %tr
                %td{:align => "center", :valign => "top"}
                  = image_tag attachments['Logo_transparent.png'].url
        %tr
          %td{:align => "center", :valign => "top"}
            %table#emailBody{:border => "0", :cellpadding => "20", :cellspacing => "0", :width => "100%"}
              %tr
                %td{:align => "center", :valign => "top"}
                  %h1 "Hay #{@user.first_name}!"
                  %p "Thanks for reaching out. We'll get back to you asap"
        %tr
          %td{:align => "center", :valign => "top"}
            %table#emailFooter{:border => "0", :cellpadding => "20", :cellspacing => "0", :width => "100%"}
              %tr
                %td{:align => "center", :valign => "top"}
                  %p &copy; Kevin Attfield Photography
