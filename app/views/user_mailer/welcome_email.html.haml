%table#bodyTable{:border => "0", :cellpadding => "0", :cellspacing => "0", :height => "100%", :width => "100%"}
  %tr
    %td{:align => "center", :valign => "top"}
      %table#emailContainer{:border => "0", :cellpadding => "20", :cellspacing => "0", :width => "600"}
        %tr
          %td{:align => "center", :valign => "top"}
            %table#emailHeader{:border => "0", :cellpadding => "10", :cellspacing => "0", :width => "100%"}
              %tr
                %td{:align => "left", :valign => "top"}
                  = image_tag attachments['logo_text.svg'], width: "100px"
        %tr
          %td{:align => "center", :valign => "top"}
            %table#emailBody{:border => "0", :cellpadding => "10", :cellspacing => "0", :width => "100%"}
              %tr
                %td{:align => "center", :valign => "top"}
                  Hay #{@user.first_name}! Thanks for signing up!
        %tr
          %td{:align => "center", :valign => "top"}
            %table#emailFooter{:border => "0", :cellpadding => "10", :cellspacing => "0", :width => "100%"}
              %tr
                %td{:align => "center", :valign => "top"}
                  %p &copy; Kevin Attfield Photography