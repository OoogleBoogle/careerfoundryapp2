- provide(:title, "#{@product.title} | ")
.container.row
  .show-img.small-12.columns= image_tag "#{@product.image_url}"
  .show-details.small-6.columns
    %h4= @product.title
    %p= @product.description
    %p= "#{number_to_currency(@product.price / 100)}"
    -# %div
    -#   = link_to "Add to Order", product_orders_path(@product), method: :post, class: 'add-to-order-btn'
    .ajax-button
      = button_to 'Add with Ajax', product_orders_path(@product), remote: true, class: 'add-to-order-btn'
    %br
    -if signed_in? && current_user.admin?
      = link_to 'Edit', edit_product_path(@product)
      |
    = link_to 'Back', products_path
  .comment-container.small-6.columns
    = render(:partial => "new_comment")
  .small-12.columns
    = will_paginate @comments
    = render(:partial => "show_comments")
